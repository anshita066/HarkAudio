<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GangsterRegular">
        <item name="fontFamily">@font/gangstergrotesk</item>
    </style>
    <style name="SFMono">
        <item name="fontFamily">@font/sfmono</item></style>
    <style name="LiteracyItalics">
        <item name="fontFamily">@font/literacyitalic</item></style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Acid_Green</item>
        <item name="colorPrimaryDark">@color/Bright_Navy_Blue</item>
        <item name="colorAccent">@color/Blood_Red</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />

</resources>