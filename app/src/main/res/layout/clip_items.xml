<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="9.42dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="7.58dp"
    android:background="@drawable/round_corners"
    android:backgroundTint="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv1"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16.42dp"
        android:layout_marginTop="15.58dp"
        android:adjustViewBounds="true"
        android:background="@drawable/image_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv1"
        style="@style/GangsterRegular"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11.58dp"
        android:layout_marginStart="17dp"
        android:textSize="22dp"
        app:layout_constraintLeft_toRightOf="@+id/iv1"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hello World" />

    <TextView
        android:id="@+id/tv2"
        style="@style/Akkurat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="12.42dp"
        android:layout_marginStart="17dp"
        android:textSize="11dp"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv1"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        tools:text="Hello" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17.42dp"
        android:textSize="11dp"
        style="@style/Akkurat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/colon"
        tools:text="hr"/>

    <TextView
        android:id="@+id/colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17.42dp"
        android:textSize="11dp"
        android:text=":"
        style="@style/Akkurat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv4" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17.42dp"
        android:layout_marginEnd="17.42dp"
        android:textSize="11dp"
        tools:text="min"
        style="@style/Akkurat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/play"
        />

    <ImageView
        android:id="@+id/play"
        android:layout_width="14.17dp"
        android:layout_height="12.5dp"
        android:layout_marginEnd="16.34dp"
        android:layout_marginBottom="16.34dp"
        android:src="@drawable/ic_play"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"


        />



</androidx.constraintlayout.widget.ConstraintLayout>